<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    android:layoutDirection="rtl"
    android:textDirection="rtl"
    tools:showIn="@layout/activity_shabat_list"
    >
<TableLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
    <TableRow>

        <TextView
            android:id="@+id/shabat_list_item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textDirection="rtl"
            tools:text="זיו גבל"/>

        <TextView
            android:id="@+id/shabat_list_item_mirs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textDirection="rtl"
            tools:text="2015"/>

        <TextView
            android:id="@+id/shabat_list_item_city"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textAlignment="textStart"
            android:textDirection="rtl"
            tools:text="חיפה"/>

        <TextView
            android:id="@+id/shabat_list_item_address"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textAlignment="textStart"
            tools:text="ארלוזורוב 17"/>

        <TextView
            android:id="@+id/shabat_list_item_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:textAlignment="textStart"
            tools:text="חלקי"/>
    </TableRow>
</TableLayout>
</android.support.v7.widget.CardView>